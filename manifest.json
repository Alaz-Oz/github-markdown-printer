{
  "manifest_version": 2,
  "name": "GFM to PDF",
  "description": "Convert GitHub Flavored Markdown previews to downloadable PDFs.",
  "version": "0.1",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Convert Markdown"
  },
  "permissions": [
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
